<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_base_layout_surface"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:background="#000"
    tools:layout_width="match_parent"
    tools:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/minus"
        android:layout_width="@dimen/inkslider_button_width"
        android:layout_height="@dimen/inkslider_button_height"
        app:layout_constraintTop_toTopOf="@id/linearLayout_colors"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout_colors"
        app:layout_constraintStart_toStartOf="parent">
        <com.inlacou.pripple.RippleLinearLayout
            android:id="@+id/ripple_layout_bottom"
            android:layout_width="@dimen/inkslider_button_width"
            android:layout_height="@dimen/inkslider_button_height"
            app:normal="@color/inkslider_plus_minus_button_color"
            app:ripple="@color/inkslider_plus_minus_button_color_ripple"
            app:cornerBottomRight="@dimen/inkslider_button_bottom_corner_bottom_right"
            app:cornerBottomLeft="@dimen/inkslider_button_bottom_corner_bottom_left"
            app:cornerTopRight="@dimen/inkslider_button_bottom_corner_top_right"
            app:cornerTopLeft="@dimen/inkslider_button_bottom_corner_top_left"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/inkslider_plus_minus_button_icon_color"
            android:contentDescription="@string/button_to_decrease_value"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_minus"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout_colors"
        android:layout_width="wrap_content"
        tools:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/anchor"
        app:layout_constraintBottom_toBottomOf="@id/anchor"
        app:layout_constraintStart_toEndOf="@+id/minus"
        android:layout_marginStart="@dimen/inkslider_button_bottom_margin_bottom_left"
        android:orientation="horizontal"/>
    <View
        android:id="@+id/anchor"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_display_top_left"/>
    <RelativeLayout
        android:id="@+id/plus"
        android:layout_width="@dimen/inkslider_button_width"
        android:layout_height="@dimen/inkslider_button_height"
        app:layout_constraintTop_toTopOf="@id/linearLayout_colors"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout_colors"
        app:layout_constraintStart_toEndOf="@id/linearLayout_colors"
        android:layout_marginStart="@dimen/inkslider_button_bottom_margin_top_right">
        <com.inlacou.pripple.RippleLinearLayout
            android:id="@+id/ripple_layout_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:normal="@color/inkslider_plus_minus_button_color"
            app:ripple="@color/inkslider_plus_minus_button_color_ripple"
            app:cornerBottomRight="@dimen/inkslider_button_top_corner_bottom_right"
            app:cornerBottomLeft="@dimen/inkslider_button_top_corner_bottom_left"
            app:cornerTopRight="@dimen/inkslider_button_top_corner_top_right"
            app:cornerTopLeft="@dimen/inkslider_button_top_corner_top_left"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/button_to_increase_value"
            android:tint="@color/inkslider_plus_minus_button_icon_color"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_plus"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout_display_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="-10dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_display_left"
            android:layout_width="@dimen/inkslider_side_display_icon_width"
            android:layout_height="@dimen/inkslider_side_display_icon_height"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_display_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/inkslider_text_color"
            android:textSize="@dimen/inkslider_indicator_text_size"
            tools:text="Left"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/inkslider_indicator_horizontal_separation"/>
        <ImageView
            android:id="@+id/iv_display_left_arrow"
            android:layout_width="@dimen/inkslider_indicator_arrow_size"
            android:layout_height="@dimen/inkslider_indicator_arrow_size"
            android:rotation="90"
            android:tint="@color/inkslider_indicator_arrow_color"
            android:src="@drawable/ic_indicator_left"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/linearLayout_display_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout_colors"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout_colors"
        android:src="@drawable/ic_indicator_center"/>
    <LinearLayout
        android:id="@+id/linearLayout_display_bottom_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anchor"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_display_right_arrow"
            android:layout_width="@dimen/inkslider_indicator_arrow_size"
            android:layout_height="@dimen/inkslider_indicator_arrow_size"
            android:tint="@color/inkslider_indicator_arrow_color"
            android:rotation="90"
            android:src="@drawable/ic_indicator_right"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/inkslider_indicator_horizontal_separation"/>
        <TextView
            android:id="@+id/tv_display_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/inkslider_text_color"
            android:textSize="@dimen/inkslider_indicator_text_size"
            tools:text="Right"/>
        <ImageView
            android:id="@+id/iv_display_right"
            android:layout_width="@dimen/inkslider_side_display_icon_width"
            android:layout_height="@dimen/inkslider_side_display_icon_height"
            android:gravity="center_vertical"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>